<div class="row justify-content-md-center">
  <div class="col-sm-12">
    <h1>Informe os dados da ação</h1>
    <hr />
    @using (Html.BeginForm("Verify", "Update", FormMethod.Post, new { @class = "mt-3" }))
    {
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="row">
        <div class="col-sm-12 col-md-6">
          <fieldset>
            <legend>Identificação da Ação</legend>
            <div class="form-group">
              @Html.DisplayNameFor(model => model.Name)
              @Html.TextBoxFor(m => m.Name, new
                {
                  @class = "form-control col-12",
                  @placeholder = "Nome",
                  @required = true
                })
            </div>
            <div class="form-group">
              @Html.DisplayNameFor(model => model.Symbol)
              @Html.TextBoxFor(m => m.Symbol, new
                {
                  @class = "form-control col-12",
                  @placeholder = "Sigla",
                  @required = true
                })
            </div>

            <div class="form-group">
              @Html.DropDownListFor(m => m.Sector,
                     new SelectList(ViewBag.Sectors),
                     "Selecione o setor"
                     )
            </div>

            <div class="form-group">
              @Html.DisplayNameFor(model => model.Price)
              @Html.TextBoxFor(m => m.Price, new
                {
                  @class = "form-control col-12",
                  @placeholder = "Preço",
                  @required = true,
                  @type = "number",
                  @step = "any"
                })
            </div>

            <div class="form-group">
              @Html.DisplayNameFor(model => model.AvailableQuantity)
              @Html.TextBoxFor(m => m.AvailableQuantity, new
                {
                  @class = "form-control col-12",
                  @placeholder = "Quantidade",
                  @required = true
                })
            </div>
          </fieldset>
        </div>
      </div>
      <hr />
      <div class="form-group text-left">
        <a href="/stock" class="btn btn-info">Cancelar</a>
        <input type="submit" name="submit" value="Atualizar ação" class="btn btn-primary" />
      </div>
    }
  </div>
</div>
