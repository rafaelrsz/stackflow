@model IEnumerable<StackFlow.Domain.Queries.ListUserQueryResult>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
  ViewBag.Title = "Ações";
  Layout = "_Layout";
}

</br>
</br>
<h2>Usuários</h2>

